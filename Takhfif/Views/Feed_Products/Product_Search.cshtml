@model IEnumerable<Takhfif.Models.Product>
@{
    ViewBag.Title = "جستجو در محصولات";
}

@foreach (var item in Model)
{
    <item>
        <name>
            @Html.DisplayFor(modelItem => item.Name)
        </name>
        <id>
            @Html.DisplayFor(modelItem => item.Id)
        </id>
        <cardurl>
            @Takhfif.App_Code.About.Root.ToString()Card/View/@Html.DisplayFor(modelitem => item.Id)
        </cardurl>
        <url>
            @Takhfif.App_Code.About.Root.ToString()Store/Product/@Html.DisplayFor(modelitem => item.Id)
        </url>
    </item>
}