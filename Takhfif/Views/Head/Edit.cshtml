@model Takhfif.Models.Admin

@{
    ViewBag.Title = "ویرایش";
}

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>کارمند</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.Username)
        </div>

        <div class="editor-field">
            @Html.EditorFor(model => model.Username)
            @Html.ValidationMessageFor(model => model.Username)
            <div class="Message">ویرایش نام کاربری نیازمند سطوح دسترسی خاص است؛ با این حال، غیر ممکن نیست. برای ویرایش این عبارت حساس، لطفا مدیر فنی را در جریان بگذارید.</div>
        </div>
        
        <div class="editor-label">
            @Html.LabelFor(model => model.Type)
        </div>
        <div class="editor-field">
            <select id="Type" name="Type">
                <option value="Head">مدیر کاربران</option>
                <option value="Police">پلیس</option>
                <option value="Vendor">فروشنده</option>
                <option value="Accountant">حسابدار</option>
            </select>
            <div class="Message">ویرایش این بخش میتواند سطوح دسترسی را به گونه ای تغییر دهد که دسترسی به نقاط اساسی قطع و یا اتصال برقرار گردد. لطفا پیش از عملیات با مدیر فنی مشورت کنید.</div>
        </div>
        
        <div class="editor-label">
            @Html.LabelFor(model => model.About)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.About)
            @Html.ValidationMessageFor(model => model.About)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.HTML)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.HTML)
            @Html.ValidationMessageFor(model => model.HTML)
        </div>

        <p>
            <input type="submit" value="ذخیره" />
        </p>
    </fieldset>
}
@if (!Request.IsAjaxRequest())
{
<p>
    @Html.ActionLink("بازگشت", "Index")
</p>
}