@model IEnumerable<Takhfif.Models.User>

@{
    ViewBag.Title = "افراد بدون دسترسی";
}
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Username)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Gender)
        </th>
        <th>
            تصویر در آبنبات
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelitem => item.Username)
            </td>
            <td>
                @Html.DisplayFor(modelitem => item.Gender)
            </td>
            <td>
                <img src="@Takhfif.App_Code.Abnt.ImageThumbnail(item.Username)" />
            </td>
            <td>
                @Html.ActionLink("تغییر مجوز", "Index", new { id = item.Username })
            </td>
        </tr>
    }
</table>
